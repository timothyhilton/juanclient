package juan.ui;

import juan.Client;
import juan.modules.Module;
import net.minecraft.client.Minecraft;
import net.minecraft.client.gui.ScaledResolution;

public class HUD {
	
	public Minecraft mc = Minecraft.getMinecraft();
	
	public void draw() {
		ScaledResolution sr = new ScaledResolution(mc);
		
		mc.fontRendererObj.drawString(Client.name + " " + Client.version, 4, 4, -1);
		
		for(Module m : Client.modules) {
			if(!m.toggled)
				continue;
			
			mc.fontRendererObj.drawString(m.name, sr.getScaledWidth() - mc.fontRendererObj.getStringWidth(m.name) - 4, 4, -1);
		}
	}
	
}
